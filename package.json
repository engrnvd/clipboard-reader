{
    "name": "apm-clipboard-reader",
    "version": "1.0.0",
    "description": "Clipboard Reader by The App Makers",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "mac-release": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icon.icns --prune=true --out=release-builds",
        "windows-release": "electron-packager . apm-clipboard-reader --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='Apm Clipboard Reader'",
        "linux-release": "electron-packager . apm-clipboard-reader --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icon.png --prune=true --out=release-builds",
        "mac-build": "electron-installer-dmg ./release-builds/apm-clipboard-reader-darwin-x64/apm-clipboard-reader.app builds/apm-clipboard-reader",
        "windows-build": "node windows-build.js"
    },
    "devDependencies": {
        "electron": "^10.1.1",
        "electron-installer-dmg": "^3.0.0",
        "electron-packager": "^15.1.0",
        "electron-reload": "^1.5.0"
    },
    "author": "Naveed Hassan",
    "license": "ISC"
}
